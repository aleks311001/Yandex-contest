void WriteFileDouble (FILE* f, int n)
    {
    for (double i = 0; i < n; i++)
        fprintf (f, "%lg ", i * 243 + 324 + 0.5);
    }

double TimeReadF (int n, double (*f)(double&))
    {
    double t = 0;
    clock_t start = clock();

    for (int i = 0; i < n; i++)
        f (&t);

    return (clock() - start) / (double)CLOCKS_PER_SEC;
    }

double F_cin (double& t)
    {
    std::cin >> *t;
    }

double F_scanf (double& t)
    {
    scanf ("%lg", t);
    }
